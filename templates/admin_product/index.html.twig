{% extends '_admin_template.html.twig' %}
{#affiche le 1er page du BACK_OFFICE#}
{% block title %}
    Liste des produits
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">liste des produit</h1>
        <a href="{{ path('admin_product_add') }}" class="button is-success">
            Nouveau produits
        </a>


        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Création</th>
                    <th></th>

                </tr>
            </thead>
            <tBody>

                {% for product in product_list %}
                    <tr>
                        <td>{{  product.id}}</td>
                        <td>
                            <a href="{{ path('product_show',{id:product.id}) }}"  target="_blank">{{ product.name }}</a>

                        </td>
                        <td >
                            {{  product.description | slice(0, 25)}}
                        </td>
                        <td >
                            {{  product.priceFloat |number_format(2,'.','') }}  €
                        </td>
                        <td>{{  product.createdAt | date('d/m/y') }}</td>
                        <td>
                            <div class="buttons">
                                <a  href = "{{ path('admin_product_edit',{id:product.id}) }}" class="button is-success mb-4">Modifier</a>

                                <a  href= "{{ path('admin_product_delete',{id:product.id}) }}" class="button is-danger">Supprimer</a>
                            </div>
                        </td>
Ò
                    </tr>
                {% endfor %}



            </tbody>
        </table>
    </div>


{% endblock %}
