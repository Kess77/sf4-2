{#affiche le 1er page du BACK_OFFICE#}
{% block title %}
    Liste des produits
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">liste des produit</h1>
        <a href="{{ path('admin_product_add') }}" class="button is-success">
            Nouveau produits
        </a>


        <table class="table is-fullwidth">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>


            </tr>
            </thead>
            <tBody>

            {% for category in category_list %}
                <tr>
                    <td>{{  category.id}}</td>
                    <td>
                        <a href="{{ path('product_show',{id:product.id}) }}"  target="_blank">{{ product.name }}</a>

                    </td>
                    <td >
                        {{  category.name |slice(0,15)}}
                    </td>

                    <td>
                        {{ category.products }}
                    </td>
                </tr>
            {% endfor %}



            </tbody>
        </table>
    </div>


{% endblock %}
